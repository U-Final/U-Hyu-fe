{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["kakao.maps.d.ts"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping */
    // 경로가 깊은 순서대로, 최신순으로 위에서부터 추가해주세요!
    "baseUrl": ".",
    "paths": {
      // 각 도메인 별 경로 설정
      "@recommendation/*": ["./src/features/recommendation/*"],
      "@home/*": ["./src/features/home/*"],
      "@user/*": ["./src/features/user/*"],
      "@kakao-map/*": ["./src/features/kakao-map/*"],
      "@extra-info/*": ["./src/features/extra-info/*"],
      "@benefit/*": ["./src/features/benefit/*"],
      "@mypage/*": ["./src/features/mypage/*"],
      "@paths": ["./src/routes/path.ts"],
      "@/*": ["./src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "vite.config.ts"]
}
