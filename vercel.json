{
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.u-hyu.site" }],
      "destination": "https://u-hyu.site/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/images/(.*)", "destination": "/images/$1" },
    { "source": "/fonts/(.*)", "destination": "/fonts/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
